<%- include('../layouts/main') %>
<h2>Process Payment</h2>
<form action="/payments" method="POST" class="bg-white shadow-md rounded p-4">
    <label for="patientID" class="block font-bold">Patient ID:</label>
    <input type="text" id="patientID" name="patientID" required class="border rounded p-2 w-full">
    
    <label for="mode" class="block font-bold mt-4">Payment Mode:</label>
    <select id="mode" name="mode" required class="border rounded p-2 w-full">
        <option value="Cash">Cash</option>
        <option value="Card">Card</option>
        <option value="UPI">UPI</option>
    </select>
    
    <label for="amount" class="block font-bold mt-4">Amount:</label>
    <input type="number" id="amount" name="amount" required class="border rounded p-2 w-full">
    
    <button type="submit" class="bg-blue-600 text-white py-2 px-4 rounded mt-4">Process Payment</button>
</form>
